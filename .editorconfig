# Root configuration
root = true

# Default settings for all files
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TypeScript-specific settings
[*.ts]
indent_size = 2

# JavaScript-specific settings
[*.js]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Do not trim trailing whitespace in .env files
[*.env]
trim_trailing_whitespace = false
